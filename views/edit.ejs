<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Creature Creator</title>
    </head>
    <body>
      <% if (currentUser) {%>
        <h1>hello</h1>
        <% } else {%>
          <h1>LOG IN</h1>
      <%} %>
        <h1>Edit</h1>
        <form action="/beasts/<%=beast.id%>?_method=PUT" method="POST">
          <h1>EVENTUAL IMAGE</h1>
      		Name: <input type="text" name="name" value="<%=beast.name%>"/>
          <br/>
      		Description: <input type="text" name="description" value="<%=beast.description%>"/>
      		<br/>
          Tags: <input type="text" name="tags" value="<%=beast.tags%>"/>
          <br/>
              <input type="submit" name="" value="Submit Changes"/>
        </form>

        <!-- if user is the creator they can delete it -->
        <form action="/beasts/<%=beast.id; %>?_method=DELETE" method="POST">
           <input type="submit" value="DELETE" onclick="return confirm('Are you sure?')"/>
       </form>
        <a href="/beasts"><button type="button" name="button">Home</button></a>

        <%_include ../views/partials/footer.ejs %>
    </body>
</html>
