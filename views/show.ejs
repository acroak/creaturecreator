<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <% if (currentUser) {%>
      <h1>hello</h1>
      <% } else {%>
        <h1>LOG IN</h1>
    <%} %>
    <nav>
    <a href="/beasts">HOME</a>
    </nav>
    <ul>

      <li>


        <h1>EVENTUAL IMAGE</h1>
        <img src="<%= beast.beastImg; %>" alt="">
          Name: <%=beast.name; %>
          Description: <%=beast.description; %>
          tags: <%=beast.tags; %>
      </li>

    </ul>
    <a href="/beasts/<%=beast.id; %>/edit"><button type="button" name="button">Edit</button></a>

    <form action="/beasts/<%=beast.id; %>?_method=DELETE" method="POST">
       <input type="submit" value="DELETE"/>
   </form>
   <div class="">
      <h5>Comments</h5>
      <% for(let i=0; i < beast.comments.length; i++) { %>
          <div class="">
              <p>
                  <%=beast.comments[i].comment%>
              </p>
              <div class="">
                  <!-- <a href="/users/<%=beast.comments[i].commentor%>"> -->
                  Commented by:  <%=beast.comments[i].commentor%>
                  <!-- </a> -->

              </div>
          </div>
      <% } %>
  </div>

   <% if (currentUser) { %>
      <form class="" action="/beasts/<%=beast._id%>/comment" method="POST">
          <label for="comment">Post a comment</label>
          <textarea class="" name="comment" id="comment" cols="30" rows="3"></textarea>
          <input type="text" name="commentor" value="<%= currentUser.username %>" style="display:none">
          <input class="" type="submit" value="Post Comment">
      </form>
  <% } %>

  </body>
</html>
